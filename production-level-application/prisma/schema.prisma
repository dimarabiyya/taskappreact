generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int     @id @default(autoincrement())
  clerkId           String  @unique
  firstName         String? // <-- UBAH INI (Tambahkan tanda tanya ?)
  secondName        String? // <-- UBAH INI (Tambahkan tanda tanya ?)
  username          String? 
  teamId            Int?
  emailAddress      String?
  profilePictureUrl String?
  
  // HAPUS relasi 'assignedTeam' untuk menyederhanakan data seeding
  
  taskAssignments TaskAssignment[]
  attachments     Attachment[]
  comments        Comment[]
  // team            Team[] <-- HAPUS BARIS INI (Jika masih ada)
  Project         Project[]
  Task            Task[]

  // Tambahkan kembali relasi ke Team (Jika tim ID ada)
  Team            Team? @relation(fields: [teamId], references: [id])
}

model Team {
  id                   Int           @id @default(autoincrement()) // <-- UBAH INI
  teamName             String
  productOwnerUserId   Int?
  projectManagerUserId Int?
  projectTeams         ProjectTeam[]
  user                 User[]
}

model Project {
  id          Int       @id @default(autoincrement()) // <-- UBAH INI
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int?      // <-- UBAH INI (hapus String? dan @db.Uuid)
  authorsIds  String[]

  tasks        Task[]
  projectTeams ProjectTeam[]
}

model ProjectTeam {
  id        Int     @id @default(autoincrement()) // <-- UBAH INI
  teamId    Int     // <-- UBAH INI (hapus String dan @db.Uuid)
  projectId Int     // <-- UBAH INI (hapus String dan @db.Uuid)
  team      Team    @relation(fields: [teamId], references: [id])
  project   Project @relation(fields: [projectId], references: [id])
}

model Task {
  id             Int       @id @default(autoincrement()) // <-- UBAH INI
  title          String
  description    String?
  status         String?
  priority       String?
  tags           String?
  startDate      DateTime?
  dueDate        DateTime?
  points         Int?
  imageSrc       String?
  projectId      Int // HAPUS @db.Int
  authorUserId   Int // HAPUS @db.Int
  assignedUserId Int?
  author         User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         Int?   // <-- UBAH INI (hapus String? dan @db.Uuid)
  editAuthors    String[]
  createdAt      DateTime  @default(dbgenerated("NOW()"))
  updatedAt      DateTime  @updatedAt

  project         Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  taskAssignments TaskAssignment[]
  attachments     Attachment[]
  comments        Comment[]
}

model TaskAssignment {
  id     Int @id @default(autoincrement()) // <-- UBAH INI
  userId Int // <-- UBAH INI (hapus String dan @db.Uuid)
  taskId Int // <-- UBAH INI (hapus String dan @db.Uuid)

  user User @relation(fields: [userId], references: [id])
  task Task @relation(fields: [taskId], references: [id])
}

model Attachment {
  id           Int @id @default(autoincrement()) // <-- UBAH INI
  fileURL      String
  fileName     String?
  taskId       Int // <-- UBAH INI (hapus String dan @db.Uuid)
  uploadedById Int // <-- UBAH INI (hapus String dan @db.Uuid)

  task       Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  uploadedBy User @relation(fields: [uploadedById], references: [id])
}

model Comment {
  id     Int @id @default(autoincrement()) // <-- UBAH INI
  text   String
  taskId Int // <-- UBAH INI (hapus String dan @db.Uuid)
  userId Int? // <-- UBAH INI (hapus String? @unique @db.Uuid)

  task Task  @relation(fields: [taskId], references: [id])
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}